---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Architecture portfolio documenting system design decisions and tradeoffs." } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=JetBrains+Mono:wght@400&display=swap" rel="stylesheet" />
    <title>{title}</title>
  </head>
  <body>
    <div class="container">
      <nav class="nav">
        <a href="/" aria-current={currentPath === "/" ? "page" : undefined}>Systems</a>
        <a href="/notes" aria-current={currentPath === "/notes" ? "page" : undefined}>Notes</a>
        <a href="/about" aria-current={currentPath === "/about" ? "page" : undefined}>About</a>
      </nav>
      <main>
        <slot />
      </main>
    </div>
  </body>
</html>

<style is:global>
  @import "../styles/global.css";
</style>
